@page
@model TicketTrackingSystemApp.Pages.Tickets.SetTechDetailsModel
@{ }
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


<div style="width:1000px; margin: 0 auto; background-color: lightgoldenrodyellow">
    <p>
        <div style="float:left">
            Subject:
            @Model.TicketInput.Subject
        </div>

        <div style="float:right">
            Date:
            @Model.TicketInput.CreateDate.ToShortDateString()
        </div>

    </p>
    <br /><br />
    <p>
        Description:
        @Model.TicketInput.Description
    </p>
    <p>
        Company: @Model.Customer.Name
    </p>


    <form method="post">

        <input type="hidden" asp-for="TicketInput.Subject" value="@Model.TicketInput.Subject" />
        <input type="hidden" asp-for="TicketInput.Description" value="@Model.TicketInput.Description" />
        <input type="hidden" asp-for="TicketInput.Customer.Name" value="@Model.Customer.Name" />
        <input type="hidden" asp-for="TicketInput.Id" value="@Model.Id" />
        <div style="float:left">
            <div class="custom-control custom-radio">
                <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input" asp-for="TicketInput.LevelOfDifficulty" value="Çok Kolay">
                <label class="custom-control-label" for="customRadio1">Çok Kolay</label>
            </div>
            <div class="custom-control custom-radio">
                <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input" asp-for="TicketInput.LevelOfDifficulty"  value="Kolay">
                <label class="custom-control-label" for="customRadio2">Kolay</label>
            </div>
            <div class="custom-control custom-radio">
                <input type="radio" id="customRadio3" name="customRadio" class="custom-control-input" asp-for="TicketInput.LevelOfDifficulty"   value="Orta">
                <label class="custom-control-label" for="customRadio3">Orta</label>
            </div>
            <div class="custom-control custom-radio">
                <input type="radio" id="customRadio4" name="customRadio" class="custom-control-input" asp-for="TicketInput.LevelOfDifficulty"  value="Zor">
                <label class="custom-control-label" for="customRadio4">Zor</label>
            </div>
            <div class="custom-control custom-radio">
                <input type="radio" id="customRadio5" name="customRadio" class="custom-control-input" asp-for="TicketInput.LevelOfDifficulty"  value="Çok Zor">
                <label class="custom-control-label" for="customRadio5">Çok Zor</label>
            </div>
        </div>

        <div style="float:right">
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="customRadioInline1" name="customRadioInline" class="custom-control-input" asp-for="TicketInput.Priority"  value="5">
                <label class="custom-control-label" for="customRadioInline1">5</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="customRadioInline2" name="customRadioInline" class="custom-control-input" asp-for="TicketInput.Priority" value="4">
                <label class="custom-control-label" for="customRadioInline2">4</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="customRadioInline3" name="customRadioInline" class="custom-control-input" asp-for="TicketInput.Priority"  value="3">
                <label class="custom-control-label" for="customRadioInline3">3</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input  type="radio" id="customRadioInline4" name="customRadioInline" class="custom-control-input" asp-for="TicketInput.Priority"  value="2">
                <label class="custom-control-label" for="customRadioInline4">2</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="customRadioInline5" name="customRadioInline" class="custom-control-input" asp-for="TicketInput.Priority"  value="1">
                <label class="custom-control-label" for="customRadioInline5">1</label>
            </div>
        </div>

        <input type="submit" name="name" value="SaveTechDetails"  class="col"   asp-page-handler="Save"/>
    </form>
</div>